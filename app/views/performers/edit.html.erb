<h1>Edit Artist</h1>

<%= form_for @performer do |f| %>
 
  <%= render 'errors'%>
  <div class="infosection"> 
  <%= render 'performerinfo', f: f %>

  <% if @performer.type == 'Group' %>
    <h3>Edit a member of the group</h3>
    <% @performer.bands.each do |band| %> 
      <%= f.fields_for :bands, band do |ff| %>
      <h4><%=band.individual.pname%> </h4>
      <p>
      <%= ff.label :joining, "Joining date:" %><br>
      <%= ff.date_field :joining %><br> 
      </p>
      <p>
      <%= ff.label :leaving, "Leaving date:" %><br>
      <%= ff.date_field :leaving %><br> 
      </p>

     <% end %>
   <% end %>
  <% end %>

  <p>
    <%= f.submit %>
  </p>
  </div>
<% end %> 
<div class="afterinfosection">
<%= link_to 'Performer Index', performers_path %> |
<%= link_to 'Performer Manage link', managelink_performer_path(@performer) %>
</div>
