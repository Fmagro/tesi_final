<h1>Search for a performer: </h1>
<%= form_tag url_for(:controller => "performers", :action => "performersearch"), :method => "get" do %>
 
  <p>
  <%= label_tag(:name_s, "Performer:") %>
  <%= text_field_tag(:name_s) %>
  </p>

  <p>
  <%= label_tag(:song_s, "Group /Individual:") %>
  <%= text_field_tag(:type_s) %>
  </p>

  <p>
  <%= label_tag(:song_s, "Song:") %>
  <%= text_field_tag(:song_s) %>
  </p>

 
  <p>
  <%= submit_tag("Search") %>
  </p>

<% end %>
