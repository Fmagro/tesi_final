<h2>Search results: </h2>
  <table class="spc">
  <tr>
    <th>Title</th>
    <th>Genre</th>
    <th>Performer</th>
  </tr>
  <% @songs.each do |s| %>
    <tr>
      <td><%= link_to s.title, song_path(s) %></td>
      <td><%=  s.genre %></td>
      <td>       
        <table>

          <% s.performances.each do |p| %>

            <td><%#=  p.performers.count %>
            <% p.performers.first(3).each do |a| %>
              <tr><td><%=  a.pname %></td></tr>
            <% end %>
            <% if p.performers.count > 3 %>
             <tr><td><%=  '...' %></td></td></tr>            
            <% end %>

          <% end %>

        </table>
      </td> 
    </tr> 
   
  <% end %>

  </table>
