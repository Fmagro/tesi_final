<h1>Search for a song: </h1>
<%= form_tag url_for(:controller => "songs", :action => "songsearch"), :method => "get" do %>
 <table>
  <tr>
    <td><%= label_tag(:title_s, "Title:") %></td>
  <td><%= text_field_tag(:title_s) %></td>
  </tr>

  <tr>
  <td><%= label_tag(:genre_s, "Genre:") %></td>
  <td><%= select_tag "genre_s", options_for_select(  Song.all_genres.to_a ),{ :prompt => "select genre" } %></td>

  </tr>

  </table>

  <p>
  <%= submit_tag("Search") %>
  </p>
<% end %>
