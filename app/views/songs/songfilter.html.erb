<h1>Search for a song: </h1>
<%= form_tag url_for(:controller => "songs", :action => "songsearch"), :method => "get" do %>
 
  <p>
  <%= label_tag(:title_s, "Title:") %>
  <%= text_field_tag(:title_s) %>
  </p>
 
  <p>
  <%= label_tag(:genre_s, "Genre:") %>
  <%= select_tag "genre_s", options_for_select(  Song.all_genres.to_a ),{ :prompt => "select genre" } %>
  </p>

  <p>
  <%= label_tag(:artist_s, "Performer:") %>
  <%= text_field_tag(:artist_s) %>
  </p>
 
  <p>
  <%= submit_tag("Search") %>
  </p>

<% end %>
