<h1>Edit concert</h1>
 
<%= form_for @concert do |f| %>
 
<%= render 'errors' %>

<div class="infosection"> 
<%= render 'concertinfo', f: f %>

<h2>Setlist</h2>
  <% @concert.setlists.each do |setlist| %> 
     <%= f.fields_for :setlists, setlist do |ff| %>
     <%= ff.text_field :position %> 

      <%=setlist.song.title%>
<br>
     <% end %>
   <% end %>
  <p>
    <%= f.submit %>
  </p>
</div>
<% end %>

<div class="afterinfosection">
<%= link_to 'Concert index', concerts_path %>
</div>
