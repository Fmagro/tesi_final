<%= form_tag url_for(:controller => "concerts", :action => "concertsearch"), :method => "get" do %>
 
  <p>
  <%= label_tag(:artist_s, "Artist:") %>
  <%= text_field_tag(:artist_s) %>
  </p>

  <p>
  <%= label_tag(:venue_s, "Venue:") %>
  <%= text_field_tag(:venue_s) %>
  </p>

  <p>
  <%= label_tag("Date") %><br>
  <%= label_tag(:a_date, "from:") %>
  <%= date_field_tag(:a_date) %>
  </p>

  <p>  
  <%= label_tag(:b_date, "to:") %>
  <%= date_field_tag(:b_date,) %>
  </p>

  <p>
  <%= label_tag(:city_s, "City:") %>
  <%= text_field_tag(:city_s) %>
  </p>

  <p>
  <%= label_tag(:country_s, "Country:") %>
  <%= text_field_tag(:country_s) %>
  </p>
 
  <p>
  <%= submit_tag("Search") %>
  </p>

<% end %>
